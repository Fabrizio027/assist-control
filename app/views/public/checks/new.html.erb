<div class="results-block">
  <%= render 'layouts/messages' %>
</div>


<body class="bg-gradient-dark">
  <div class="container">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <%= form_for :check, url: public_checks_path do |f| %>
          <div class="card">
            <div class="card-header">CONTROL DE ASISTENCIA</div>
            <div class="card-body">
              <div class="form-group">
                <%= f.label  "Ingresa tu codigo de usuario" %>
                <div class="input-group">
                  <%= f.text_field :user_id, {:class=> "form-control"} %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label "Tipo" %>
                <div class="input-group">
                  <%= f.select(:type_control, options_for_select([['Ingreso', 'entry'], ['Salida', 'exit']]), options = {}, html_options = { class: "form-control" }) %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label "Fecha y Hora " %>
                <div class="form-group">
                  <%= f.datetime_local_field :date, {:class=> "form-control"} %>
                </div>
              </div>
              <br>
              <div class="form-group">
                <%= f.submit "Registrar", :class => "btn btn-dark col-md-12"%>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
